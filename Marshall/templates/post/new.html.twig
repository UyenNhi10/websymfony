{% extends 'base_admin.html.twig' %}

{% block title %}New Post{% endblock %}

{% block body %}
<style>
    /* Your styling code here */
</style>
<h1>Create New Post</h1>

<form method="post" enctype="multipart/form-data">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.introduce, {'attr': {'class': 'form-control', 'rows': 5}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.body, {'attr': {'class': 'form-control', 'rows': 10}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.end, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.dateAt, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_row(form._token) }}
    <button type="submit" class="btn btn-primary">Create</button>
    {{ form_end(form) }}
    <a href="{{ path('app_post_index') }}">Back to List</a>
</form>
{% endblock %}
