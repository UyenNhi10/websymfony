<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="https://marshallvietnam.com.vn/wp-content/uploads/2023/03/logo-favicon.jpg">
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <style>
            .navbar-nav .nav-item {
                margin-right: 20px;
            }

            .navbar-nav .nav-item:last-child {
                margin-right: 0;
            }

            .footer {
                background-color: #343a40;
                color: white;
                padding: 30px 0;
            }

            .footer .row {
                margin-top: 20px;
            }



            .footer ul {
                padding-left: 0;
                list-style: none;
            }

            .footer li {
                margin-bottom: 10px;
            }
            .nav-link {

                padding-right: 20px;
            }
            .collapse navbar-collapse{

                justify-content: center;


            }



            .footer ul {
                padding-left: 0;
                list-style: none;
            }

            .footer li {
                margin-bottom: 10px;
            }
            .nav-tabs .nav-item {
                margin-bottom: 0;
            }

            .nav-tabs .nav-link {
                color: #3482A3;
            }

            .nav-tabs .nav-link:hover {
                background-color: transparent;
                color: #3482A3;
            }

            .nav-tabs .nav-link.active {
                color: #fff;
                background-color: #3482A3;
                border-color: #3482A3;
            }

            .nav-tabs .dropdown-menu {
                background-color: #fff; /* Màu nền dropdown menu */
            }

            .nav-tabs .dropdown-item {
                color: #3482A3;
            }

            .nav-tabs .dropdown-item:hover {
                background-color: #f8f9fa; /* Màu nền khi hover dropdown item */
                color: #3482A3;
            }
            .navbar-nav {
                display: flex;
                justify-content: center;
                align-items: center;
                width: 100%;
            }

            .nav-link {
                padding: 0 10px;
            }

            .container-fluid{

                justify-content: center;

        }
            .divider {
                margin-top: 2rem;
                margin-bottom: 2rem;
                border: none;
                border-top: 1px solid #eee;
            }



            .footer h5 {
                margin-bottom: 20px;
            }

            .footer ul {
                padding-left: 0;
                list-style: none;
            }

            .footer li {
                margin-bottom: 10px;
            }
        </style>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
{% block header %}

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark" >
        <div class="container-fluid">
            <a class="nav-link" href="http://127.0.0.1:8000/home">
                <img src="https://media.printables.com/media/prints/427415/images/3536401_0d848a04-2ada-4ec1-8974-e64e375aa60b/marshall.png" width="100px" height="100px" style="margin-left: 150px;">
            </a>

            <div class="collapse navbar-collapse" id="mynavbar">

                <ul class="navbar-nav ms-auto me-auto"> <!-- Phần tìm kiếm được đưa vào trung tâm -->
                    <form class="d-flex" action="{{ path('search') }}" method="GET" style="margin-right: 40px;">
                        <input class="form-control me-sm-0" type="search" name="keyword" placeholder="Search" required>
                        <button class="btn btn-secondary my-2 my-sm-0 mx-2" type="submit">Search</button>
                    </form>
                </ul>

                <ul class="navbar-nav d-flex align-items-center"> <!-- Phần giỏ hàng và đăng nhập được đưa sang bên phải -->
                    <li class="nav-item mx-2">
                        <a class="nav-link d-flex align-items-center" href="/cart" style="margin-right: 40px;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart3 me-1" viewBox="0 0 16 16">
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>

                        </a>
                    </li>
                    <li class="nav-item">
                        <form>
                            <a class="btn btn-secondary" href="/{{ app.user ? 'logout' : 'login' }}" @click="isOpen = false">
                                {{ app.user ? 'logout' : 'login'}}
                            </a>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3"  >
        <ul class="nav nav-tabs" style="color: #3482A3">
            <li class="nav-item" >
                <a class="nav-link active" href="show_all">Product</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Category</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="headphones">MARSHALL HEADPHONES</a></li>
                    <li><a class="dropdown-item" href="speakers">MARSHALL SPEAKER</a></li>
                    <li><a class="dropdown-item" href="accessories">MARSHALL ACCESSORIES</a></li>
                    <li><a class="dropdown-item" href="travel">MARSHALL TRAVEL</a></li>

                </ul>
            </li>
            <li class="nav-item mx-1">
                <a class="nav-link" href="contactnew">Contact</a>
            </li>

            <li class="nav-item mx-1">
                <a class="nav-link" href="orderstatus">Order Status</a>
            </li>
        </ul>
    </div>
<br/>
    <br/>
    <br/>
<nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
    <div class="container-fluid justify-content-center">
            <div class="collapse navbar-collapse " id="navbarColor02">
                <a class="nav-item mx-2" href="http://127.0.0.1:8000/admin">


                </a>

                <ul class="navbar-nav mx-auto ">

                    <li class="nav-item" >
                        <a class="btn btn btn-info" href="http://127.0.0.1:8000/product">Product Management</a>
                    </li>
                    <li class="nav-item">
                        <a class=" btn btn btn-info" href="http://127.0.0.1:8000/category">Category Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn btn-info" href="http://127.0.0.1:8000/user">User Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn btn-info" href="http://127.0.0.1:8000/order">Orders Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn btn-info" href="http://127.0.0.1:8000/contact">Feedback Management</a>
                    </li>

                </ul>
            </div>

        </div>
        </div>
    </nav>
    <hr class="divider">
{% endblock %}


{% block body %}{% endblock %}

<hr class="divider">


</body>
</html>
