{% extends 'base_admin.html.twig' %}

{% block title %}Update Post{% endblock %}

{% block body %}
<style>
    /* Your styling code here */
</style>
<div class="title">
    <h1>Update Post</h1>
</div>
<div class="update">
    <form method="post" enctype="multipart/form-data">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.introduce, {'attr': {'class': 'form-control', 'rows': 5}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.body, {'attr': {'class': 'form-control', 'rows': 10}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.end, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.dateAt, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(form._token) }}
        <button type="submit" class="btn btn-primary">Update</button>
        {{ form_end(form) }}
</div>
<div class="back">
    <a href="{{ path('app_post_index') }}">Back to List</a>
</div>
<div class="delete">
    {{ include('post/_delete_form.html.twig') }}
</div>
{% endblock %}
