{% extends 'base_login.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="path/to/custom.css">
{% endblock %}

{% block body %}
    <link rel="stylesheet" href="path/to/custom.css">
    <style>
        /* Additional styles specific to this page */
        .login-container {

            display: flex;
            justify-content: center;
            align-items: center;
            height: 60vh; /* Adjusted height for better centering */
        }
        .login-form {
            width: 30vw; /* Adjusted form width */
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .login-title {
            text-align: center;
            color: #3482A3;
        }
        .form-group {
            margin-bottom: 20px; /* Increased margin between form fields */
        }
        .btn-login {
            width: 100%;
            background-color: #2D98A8;
            color: #fff;
            border: none;
            border-radius: 20px;
            padding: 10px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .btn-login:hover {
            background-color: #257885;
        }
        .signup-link {
            text-align: center;
            margin-top: 20px;
        }
    </style>

    <div class="login-container">

        <form method="post" class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="logged-in">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <h1 class="login-title">Please sign in</h1>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-primary btn-block" type="submit">
                Log in
            </button>
            <div class="signup-link">
                Don't have an account? <a href="register">Sign up</a>
            </div>
        </form>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="path/to/custom.js"></script>
{% endblock %}
