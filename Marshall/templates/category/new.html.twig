{% extends 'base_admin.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
    <style>
        h1{
            color: #3482A3;
        }
        .container {
            margin: 20px auto;
            padding: 0 20px;
            max-width: 800px;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 30vh;
        }

        .login-form .btn-block {
            display: flex;
            justify-content: center;
            width: 30vw;
            padding-top: 20px;
        }

        .login-title {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .create {
            display: flex;
            justify-content: center;
            padding-top: 20px;
        }

        .signup-link {
            display: flex;
            justify-content: center;
            padding-top: 30px;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #3482A3;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .btn:hover {
            opacity: 0.8;
        }
    </style>
    <div class="container">
        <h1 class="login-title">Create new Category</h1>
        <div class="login-container">
            {{ form_start(form) }}
            {{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
            <div class="create">
                <button class="btn btn-primary btn-block" type="submit">Create</button>
            </div>

            <div class="signup-link">
                <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to list</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
